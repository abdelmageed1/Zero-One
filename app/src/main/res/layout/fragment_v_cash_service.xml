<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Vodafone.VCashServiceFragment">


    <Button
        android:id="@+id/etVodafoneKnowBalance"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:text="معرفة الرصيد "
        android:textSize="25dp"

        />

    <Button
        android:id="@+id/etVodafoneMoneyTransfer"
        style="?attr/materialButtonOutlinedStyle"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:text="تحويل فلوس "

        android:textSize="25dp"

        />

    <Button
        android:id="@+id/etVodafoneRechargeToMyself"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:text="شحن لنفسى "
        android:textColor="#F44336"
        android:textSize="25dp"

        />

    <Button
        android:id="@+id/etVodafoneRechargeToOther"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:text="شحن للغير "
        android:textColor="#E91E63"
        android:textSize="25dp"

        />


</LinearLayout>

